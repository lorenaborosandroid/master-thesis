<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="TextTabItem">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/commonui_text_size</item>
        <item name="android:letterSpacing">0.09</item>
        <item name="android:textColor">@color/mediconear_light_purple</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="cornerSize">10dp</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/mediconear_white</item>
        <item name="rippleColor">@color/commonui_ripple_background_color</item>
        <item name="android:textColor">@color/mediconear_purple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="backgroundTint">@color/mediconear_white</item>
        <item name="rippleColor">@color/commonui_ripple_background_color</item>
        <item name="android:textColor">@color/mediconear_purple</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>